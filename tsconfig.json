{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "@lib/*": ["./app/lib/*"],
      "@components/*": ["./app/components/*"],
      "@features/*": ["./app/features/*"],
      "@services/*": ["./app/services/*"],
      "@db/*": ["./app/db/*"],
      "@root/*": ["./app/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
